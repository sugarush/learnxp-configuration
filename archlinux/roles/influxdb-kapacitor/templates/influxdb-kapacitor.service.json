{
  "service": {
    "id": "influxdb-kapacitor",
    "name": "influxdb-kapacitor",
    "tags": [
      "{{ lookup('env', 'ENVIRONMENT') }}"
    ],
    "address": "{{ lookup('env', 'HOST_IP') }}",
    "port": 9092,
    "checks": [
      {
        "args": [ "systemctl", "is-active", "kapacitor" ],
        "interval": "30s"
      },
      {
        "tcp": "{{ lookup('env', 'HOST_IP') }}:9092",
        "interval": "30s",
        "timeout": "1s"
      }
    ]
  }
}
