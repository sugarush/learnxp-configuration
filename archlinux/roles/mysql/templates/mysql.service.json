{
  "service": {
    "id": "mysql",
    "name": "mysql",
    "tags": [
      "{{ lookup('env', 'ENVIRONMENT') }}"
    ],
    "address": "{{ lookup('env', 'HOST_IP') }}",
    "port": 3306,
    "checks": [
      {
        "script": "systemctl is-active mysqld",
        "interval": "30s"
      },
      {
        "tcp": "{{ lookup('env', 'HOST_IP') }}:3306",
        "interval": "30s",
        "timeout": "1s"
      }
    ]
  }
}
