{
  "service": {
    "id": "influxdb-chronograf",
    "name": "influxdb-chronograf",
    "tags": [
      "{{ lookup('env', 'ENVIRONMENT') }}"
    ],
    "address": "{{ lookup('env', 'HOST_IP') }}",
    "port": 8888,
    "checks": [
      {
        "script": "systemctl is-active chronograf",
        "interval": "30s"
      },
      {
        "tcp": "{{ lookup('env', 'HOST_IP') }}:8888",
        "interval": "30s",
        "timeout": "1s"
      }
    ]
  }
}
