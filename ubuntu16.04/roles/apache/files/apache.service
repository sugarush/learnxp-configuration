[Unit]
Description=Apache Web Server
After=network.target remote-fs.target nss-lookup.target

[Service]
Type=simple
ExecStart=/usr/bin/apache2 -k start -DFOREGROUND
ExecStop=/usr/bin/apache2 -k graceful-stop
ExecReload=/usr/bin/apache2 -k graceful
PrivateTmp=true
LimitNOFILE=infinity
KillMode=mixed

[Install]
WantedBy=multi-user.target
